<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginStart="113.1dp"
        android:layout_marginEnd="113.1dp"
        android:layout_marginBottom="548.7dp"
        android:background="@drawable/fill_1"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="196dp"
        android:layout_marginBottom="431dp"
        android:layout_marginStart="62.5dp"
        android:layout_marginEnd="62.5dp"
        android:hint="Username"
        android:textColorHint="@color/E4"
        android:textSize="12sp"
        android:background="@drawable/shape1"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="62.5dp"
        android:layout_marginEnd="62.5dp"
        android:hint="Password"
        android:textColorHint="@color/E4"
        android:textSize="12sp"
        android:background="@drawable/shape1"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintBottom_toTopOf="@id/login"
        />

    <TextView
        android:id="@+id/remember_me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/password"
        android:layout_marginTop="22.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="135.5dp"
        android:hint="Remember me"
        android:textColorHint="#222222"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/password"
        android:layout_marginTop="22.5dp"
        android:hint="Forgot password?"
        android:textColorHint="#222222"
        android:textSize="12sp"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/remember_me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22.5dp"
        android:layout_marginStart="62.5dp"
        android:layout_marginEnd="62.5dp"
        android:hint="Login"
        android:textColorHint="@color/white"
        android:background="@drawable/login_button_sel"
        android:foreground="@drawable/ripple_foreground"
        />

    <TextView
        android:id="@+id/or_connect_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintStart_toStartOf="@id/login"
        app:layout_constraintEnd_toEndOf="@id/login"
        android:layout_marginTop="26.5dp"
        android:layout_marginStart="80.5dp"
        android:layout_marginEnd="80.5dp"
        android:hint="or connect with"
        android:textColorHint="#b2b2b2"
        android:textSize="12sp"
        />

    <ImageButton
        android:id="@+id/face_book"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/or_connect_with"
        app:layout_constraintStart_toStartOf="@id/login"
        android:layout_marginTop="26.5dp"
        android:background="@drawable/fb"
        android:foreground="@drawable/ripple_foreground"
        />

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/or_connect_with"
        app:layout_constraintEnd_toEndOf="@id/login"
        android:layout_marginTop="26.5dp"
        android:background="@drawable/tw"
        android:foreground="@drawable/ripple_foreground"
        />

    <Button
        android:id="@+id/sign_up_with_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/face_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="85.5dp"
        android:layout_marginStart="62.5dp"
        android:layout_marginEnd="62.5dp"
        android:hint="Sign Up with E-mail"
        android:textColorHint="@color/blue1"
        android:textSize="12sp"
        android:background="@drawable/signup_button_selector"
        android:foreground="@drawable/ripple_foreground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>